page {
  background: #f3f3f3;
}
.banner {
  display: block;
  width: 100%;
  height: 340rpx;
}
.block {
  background: #fff;
  margin-top: 15rpx;
}

.block-title {
  position: relative;
  font-size: 34rpx;
  line-height: 1.5;
  color: #2e5e86;
  padding: 10rpx 20rpx;
  text-indent: 40rpx;
}

.block-title::after {
  position: absolute;
  left: 20rpx;
  top: 10rpx;
  content: "";
  width: 12rpx;
  height: 40rpx;
  background: #2e5e86;
}

.block-desc {
  display: block;
  word-break: break-all;
  word-wrap: break-word;
  color:#666;
  line-height: 1.6;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx;
}

.box {

}

.item {
  width: 100rpx;
  height: 100rpx;
  background: red;
  border: 1rpx solid #000;
  margin: 10rpx;
}

.list-item {
  border-bottom: 1rpx dashed #ccc;
  height: 60rpx;
  line-height: 60rpx;
}